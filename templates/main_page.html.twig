{# templates/main_page.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Witaj na blogu{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('main_page') }}">Strona główna <span class="sr-only">(current)</span></a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_list') }}">Kategorie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('add_post') }}">Utwórz Post</a>
                        </li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Wyloguj</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Zaloguj</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="text-center my-4">Witaj w naszym blogu!</h1>

                <div class="mb-4">
                    {{ form_start(form) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.search) }}
                    {{ form_end(form) }}
                </div>

                {% for post in pagination %}
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.content|slice(0, 100) }}...</p>
                            <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Czytaj więcej</a>

                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-secondary">Edytuj</a>

                                <form method="post" action="{{ path('post_delete', {'id': post.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć ten post?');" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-post' ~ post.id) }}">
                                    <button class="btn btn-danger" type="submit">Usuń</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <p>Brak dostępnych postów do wyświetlenia.</p>
                {% endfor %}

                <div class="navigation text-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
